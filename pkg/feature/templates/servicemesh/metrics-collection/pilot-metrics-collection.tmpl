kind: ServiceMonitor
metadata:
  name: {{ .ServiceMesh.ControlPlane.Name }}-pilot-monitor
  namespace: {{ .ServiceMesh.ControlPlane.Namespace }}
spec:
  targetLabels:
  - app
  selector:
    matchLabels:
      istio: pilot
  endpoints:
  - port: http-monitoring
    interval: 30s
