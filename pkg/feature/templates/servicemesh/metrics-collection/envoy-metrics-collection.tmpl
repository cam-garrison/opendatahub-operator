apiVersion: monitoring.coreos.com/v1
kind: PodMonitor
metadata:
  name: {{ .ServiceMesh.ControlPlane.Name }}-envoy-monitor
  namespace: {{ .ServiceMesh.ControlPlane.Namespace }}
spec:
  selector:
    matchExpressions:
    - key: istio-prometheus-ignore
      operator: DoesNotExist
  podMetricsEndpoints:
  - path: /stats/prometheus
    interval: 30s
